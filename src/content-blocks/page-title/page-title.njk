<header class="ds_cb  ds_cb--page-title
{%- if params.wideText %}  ds_cb--page-title--wide{% endif -%}
{%- if params.background %}  ds_cb--bg-{{ params.background }}{% endif -%}
{%- if params.foreground %}  ds_cb--fg-{{ params.foreground }}{% endif -%}
{%- if params.fullwidth %}  ds_cb--fullwidth{% endif -%}
{%- if params.neutralLinks %}  ds_cb--neutral-links{% endif -%}">
    <div class="ds_wrapper">
        <div class="ds_cb__inner">
            <div class="ds_cb__text  ds_cb__content  {%- if params.textAlignment %}  {{ params.textAlignment }}{% endif -%}">
                <div class="ds_page-header">
                    <h1 class="ds_page-header__title  {%- if params.headingWeight %}  {{ params.headingWeight }}{% endif -%}">{{ params.heading }}</h1>
                </div>
                {%- if params.content %}
                {{ params.content | safe }}
                {% endif -%}
                {%- if params.button %}
                {% render '@button', params.button -%}
                {% endif -%}
            </div>
            {%- if params.image %}
            <div class="ds_cb__poster  {%- if params.imageAlignment %}  {{ params.imageAlignment }}{% endif -%}  {%- if params.imageCover %}  ds_cb__poster--cover{% endif -%}">
                <picture>
                    {%- if params.imageHideOnMobile %}
                    <source media="(max-width: 767px)"
                            sizes="1px"
                            srcset="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7 1w"/>
                    {% elseif params.imageCover -%}
                    <source media="(max-width: 767px)"
                            sizes="{{ params.imageWidth }}px"
                            srcset="{{ params.image }} {{ params.imageWidth }}w"/>
                    {% endif -%}
                    {%- if params.imageCover %}
                    <img alt="{{ params.imageCoverAlt }}" src="{{ params.imageCover }}" width="{{ params.imageCoverWidth }}" height="{{ params.imageCoverHeight }}"/>
                    {% else %}
                    <img alt="{{ params.imageAlt }}" src="{{ params.image }}" width="{{ params.imageWidth }}" height="{{ params.imageHeight }}"/>
                    {% endif -%}
                </picture>
            </div>
            {% endif -%}
        </div>
    </div>
{%- if params.aside %}
    <aside class="ds_cb  ds_cb--page-title__aside
    {%- if params.aside.background %}  ds_cb--bg-{{ params.aside.background }}{% endif -%}
    {%- if params.aside.foreground %}  ds_cb--fg-{{ params.aside.foreground }}{% endif -%}
    {%- if params.fullwidth %}  ds_cb--fullwidth{% endif -%}">
        <div class="ds_wrapper">
            {%- if params.aside.icon %}
            <span class="ds_cb--page-title__aside-icon" aria-hidden="true">
                {{ params.aside.icon | safe }}
            </span>
            {% endif -%}
            {{ params.aside.content | safe }}
        </div>
    </aside>
{% endif -%}
</header>