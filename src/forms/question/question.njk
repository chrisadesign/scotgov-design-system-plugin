<div class="ds_question{% if params.error %}  ds_question--error{%- endif %}">
{%- if params.fields -%}
    {% for field in params.fields %}
        {% if field.label -%}
            {% render '@label', field.label %}
        {%- endif -%}
        {% if field.hint -%}
            {% render '@hint-text', field.hint %}
        {%- endif -%}
        {% if field.textInput.params.error -%}
            <p class="ds_question__error-message" id="{{field.textInput.params.errorId}}">{{field.textInput.params.errorMessage}}</p>
        {%- endif -%}
        {% if field.textInput -%}
            {% render '@text-input', field.textInput -%}
        {%- endif %}
    {%- endfor -%}
{%- endif -%}
</div>
