<div class="ds_search-results">

    {%- if params.resultsCount %}
    <h2 class="ds_search-results__title">{%- if params.resultsStart %}Showing {{ params.resultsStart }} to {{ params.resultsEnd }} of {% endif %}{{ params.resultsCount }} results for <span class="ds_search-results__title-query">{{ params.resultsTitle }}</span>{%- if params.suggestionLabel %} and <span class="ds_search-results__title-query">{{ params.suggestionLabel }}</span>{%- endif %}</h2>
    {%- endif %}
    {%- if params.suggestionLabel %}
    <nav class="ds_search-suggestions" aria-label="Alternative search suggestions">
        <h2 class="visually-hidden">Also showing results for {{ params.suggestionLabel }}</h2>
        <p><span aria-hidden="true">Also showing results for</span> <a aria-label="Show results only for {{ params.suggestionLabel }}" href="{{ params.suggestionLink }}">{{ params.suggestionLabel }}</a><br>
        <span aria-hidden="true">Show results only for</span> <a aria-label="Show results only for {{ params.resultsTitle }}" href="{{ params.resultsLink }}">{{ params.resultsTitle }}</a></p> 
    </nav>
    {%- endif %}

    {%- if params.resultsList %}
    <ol class="ds_search-results__list" data-total="{{ params.resultsCount }}" {%- if params.resultsStart %} start="{{ params.resultsStart }}"{%- endif %}>
        {%- for result in params.resultsList %}
        {% render '@search-result', result %}
        {%- endfor %}     
    </ol>
    {%- endif %}

    {%- if params.pagination %}
        {% render '@pagination', params.pagination %}
    {%- endif %}

    {%- if params.relatedList %}
    <aside class="ds_search-results__related" aria-labelledby="search-results__related-title">
        <h2 id="search-results__related-title" class="ds_search-results__related-title">Related searches</h2>
        <ul class="ds_no-bullets">
        {%- for related in params.relatedList %}
            <li><a href="{{ related.relatedLink }}">{{ related.relatedLabel }}</a></li>
        {%- endfor %}     
        </ul>
    </aside>
    {%- endif %}
</div>