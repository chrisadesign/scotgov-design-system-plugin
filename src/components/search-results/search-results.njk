<div class="ds_search-results">
    {%- if params.suggestion %}
    <nav id="suggestions" class="ds_search-suggestions" aria-label="Alternative search suggestions">
        <span aria-hidden="true">Did you mean:</span>
        <ul>
            <li>
                <a aria-label="Did you mean '{{ params.suggestion }}'?" href="{{ params.suggestionLink }}">{{ params.suggestion }}</a>
            </li>
        </ul>
    </nav>
    {%- endif %}
    {%- if params.heading %}
    <h2 class="visually-hidden">{{ params.heading }}</h2>
    {%- endif %}
    {%- if params.resultsCount %}
    <p class="ds_search-results__count js-search-results-count"><b>{{ params.resultsCount }}</b> results</p>
    {%- endif %}
    {%- if params.resultsList %}
    <ol id="search-results-list" class="ds_search-results__list" {%- if params.resultsCount %} data-total="{{ params.resultsCount }}"{%- endif -%}>
        {%- for result in params.resultsList %}
        {% render '@search-result', result %}
        {%- endfor %}     
    </ol>
    {%- endif %}

    {%- if params.pagination %}
        {% render '@pagination', params.pagination %}
    {%- endif %}

    <aside class="ds_search-results__related  ds_callout  ds_callout--no-border" aria-labelledby="search-results__related-heading">
        <h2 id="search-results__related-heading" class="ds_search-results__related-heading">Related searches</h2>
        <ul class="ds_no-bullets">
            <li><a href="#">crofting law scotland</a></li>
            <li><a href="#">crofting register</a></li>
            <li><a href="#">crofting grants</a></li>
        </ul>
    </aside>
</div>