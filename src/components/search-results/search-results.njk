<div class="ds_search-results">
    {%- if params.suggestions %}
    <nav class="ds_search-suggestions" aria-label="Alternative search suggestions">
        <span aria-hidden="true">Did you mean:</span>
        <ul>
            {%- for suggestion in params.suggestions %}
            <li>
                <a aria-label="Did you mean '{{ suggestion.suggestionLabel }}'?" href="{{ suggestion.suggestionLink }}">{{ suggestion.suggestionLabel }}</a>
            </li>
            {%- endfor %} 
        </ul>
    </nav>
    {%- endif %}

    {%- if params.resultsCount %}
    <h2 class="ds_search-results__title"><span class="ds_search-results__title-count">{{ params.resultsCount }}</span> results for <span class="ds_search-results__title-query">{{ params.resultsTitle }}</span></h2>
    {%- endif %}

    {%- if params.resultsList %}
    <ol class="ds_search-results__list" data-total="{{ params.resultsCount }}">
        {%- for result in params.resultsList %}
        {% render '@search-result', result %}
        {%- endfor %}     
    </ol>
    {%- endif %}

    {%- if params.pagination %}
        {% render '@pagination', params.pagination %}
    {%- endif %}

    {%- if params.relatedList %}
    <aside class="ds_search-results__related" aria-labelledby="search-results__related-title">
        <h2 id="search-results__related-title" class="ds_search-results__related-title">Related searches</h2>
        <ul class="ds_no-bullets">
        {%- for related in params.relatedList %}
            <li><a href="{{ related.relatedLink }}">{{ related.relatedLabel }}</a></li>
        {%- endfor %}     
        </ul>
    </aside>
    {%- endif %}
</div>