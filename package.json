{
  "name": "@scottish-government/pattern-library",
  "description": "Design System for Scottish public sector websites",
  "version": "0.0.0",
  "author": {
    "name": "mygov.scot Digital Engineering team",
    "email": "mygov-tech-team@gov.scot",
    "url": "https://patternlibrary.mygov.scot"
  },
  "license": "MIT",
  "scripts": {
    "fractal": "fractal start --sync",
    "dev": "npm run webpackdev; npm run sassdev; npm run svgspritedev;",
    "postshrinkwrap": "sealant",
    "prepublish": "npm run webpack; npm run sass; npm run svgsprite; npm run test",
    "nodesass": "node-sass src --output dist/css --output-style compressed",
    "sass": "sass --style=compressed src/pattern-library.scss dist/css/pattern-library.css",
    "sassdev": "sass --style=expanded src/pattern-library.scss dev/css/pattern-library.css",
    "svgsprite": "node svg-sprite",
    "svgspritedev": "node svg-sprite --mode=dev",
    "test": "karma start ./karma.conf.js",
    "webpack": "webpack",
    "webpackdev": "webpack --env.mode=dev"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.15.8",
    "@frctl/fractal": "^1.5.11",
    "@frctl/nunjucks": "^2.0.11",
    "ajv": "^6.9.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^2.4.1",
    "jasmine-jquery": "^2.1.1",
    "karma": "^3.1.4",
    "karma-babel-preprocessor": "^8.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-coverage-istanbul-reporter": "^1.4.3",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-jquery-2": "^0.1.1",
    "karma-jasmine-matchers": "^4.0.1",
    "karma-viewport": "^1.0.8",
    "karma-webpack": "^4.0.2",
    "node-sass": "^4.12.0",
    "pre-commit": "^1.2.2",
    "sass": "^1.43.2",
    "sealant": "^0.1.1",
    "svg-sprite": "^1.5.3",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1",
    "yargs": "^17.2.1"
  }
}
